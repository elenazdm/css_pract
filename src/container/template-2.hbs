<div class='page'>
  <div class='page_content'>
    <div class="page_block">
      
           <header class='header'>
            <div class="">
              {{>logo}}
            </div>
            
            <nav class='header_nav '>
              <div class="header_nav_right">
                {{>nav list=header}}
              </div>
              
            </nav>

          </header>
          
    </div>
    <section class="page_block">
      <div class="hero">
        {{#with hero}}
        {{>hero title=title text=text}}
        <a class="button" href="{{button.url}}" >{{button.text}}</a>
        {{/with}}
      </div>
     
    </section>
    <section class="page_block">
      <div class="flex-container">
           {{#each preview}}
         
              {{> cardPreview class="flex-item" data=this}}
         
          {{/each}}
              
      </div>
    </section >
     <div class="page_block">
      <main class="main g-0">
        <div class="row">
          <div class="col-12">
            <div class="list_header">
            
              <div> 
                  <h2 class="list_title">List of posts</h2>
              </div>
              <div> 
                <div class="categoroes_list">
                  {{#each categories}}
                    <button class="category_button">{{text}} </button>
                  {{/each}}
                </div>
                
              </div>
                             
            </div> 
          </div>

          <div class="col-7">
            <div class="list" >
              {{#each news}}
                {{>cardPost data=this}}
              {{/each}}
            </div>
              
              
            
          </div>

          <div class="col-5">
             <aside class="list_aside" >
              <div class="about">
                <h4 class="about_title">About</h4>
                <p class="about_text">{{about}}</p>
              </div>
              {{>linkList data=archive title="Arcieve"}}
              {{>linkList data=social title="Social"}}
             
            </aside>
          </div>
          
           
        </div>
      </main>
      
        
    </div>
    
    <div class="page_block">
      
      <footer class="footer">
        <div >
           {{>logo}}
           <span class="footer_copyright" >Copyright 2023-2024</span>
        </div>
        {{#each footer}}
         <div class="col-3">
           <span class="footer_title">{{title}}</span>
           {{>nav list=links isVertical=true}}
         </div>
        {{/each}}
        
      </footer>
    </d iv>
     
  </div>
</div>