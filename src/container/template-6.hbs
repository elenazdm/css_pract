

 
      
  <header class='header row g-0'>
            <div class="col-3">
              {{>logo}} 
            </div>
            
            <nav class='header_nav col-9 '>
              <div class="header_nav_right">
                {{>nav list=header}}
              </div>
              
            </nav>

  </header>
  <main class="main">
    <div class="info">
      <h1 class="info_title">{{info.title}}</h1>
      <p class="info_description">{{info.description}}</p>
    </div>
    

    <form class="form">
      {{#with form}}
        <h2 class="form_title">
          {{title}}
        </h2>
        <div class="form_input_list">
          {{#each inputs}}
          <input type="type" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form_input_1" >
          {{/each}}
        </div>
        <div class="form_checkbox">
          
            <input type="checkbox" name="{{checkbox.name}}" class="checkbox" id=" {{checkbox.name}}">
           <div ></div> 
           <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p> 

        {{/with}}
    </form>

  </main> 
  <div class="updates">
    {{#with updates}}
      <h2 class="updates_title">{{title}}</h2>
      {{#each list}}
       <div class="list">
           <div class="svg" width="32px" height="32px">
            32x32
           </div>
            <div class="updates_list">
            <p class="updates_list_nickname">{{nickname}}</p>
            <p class="updates_list_description">{{description}}</p>
            
            </div>

       </div>
      {{/each}}
         <div class="show_all_block">
          <a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
         </div>
        
      
    {{/with}}
  </div>
  <div class="badge_exp_block" ><p class="badge_exp">{{expirience.badge}}</p></div>
  <div class="expirience">
    
    {{#with expirience}}
    
      <h2 class="expirience_title">{{title}}</h2>
      
      
         <div class="expirience_card">
          {{#each list}}
          <div class="expirience_card_item">
             <p class="expirience_name">{{name}}</p>
             <p class="expirience_details">{{details}}</p>

          </div>
             
        {{/each}}
         </div>
          
      
    {{/with}}

  </div>
  

      <footer class="footer">
        <div >
           {{>logo}}
           <span class="footer_copyright" >Copyright 2023-2024</span>
        </div>
        {{#each footer}}
         <div >
           <span class="footer_title">{{title}}</span>
           {{>nav list=links isVertical=true}}
         </div>
        {{/each}}
        
      </footer>

     
  